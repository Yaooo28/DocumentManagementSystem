@model List<DocumentListDto>
@{
    Layout = "_Layout";
}

<style>
    .form-select, .form-control {
        height: calc(2.25rem + 2px);
    }

    .btn i {
        vertical-align: middle;
    }
</style>

<!-- Announcements Section -->
@if (User.Identity.IsAuthenticated)

{
    <div class="container mt-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header" style="background-color: forestgreen">
                <h4 class="mb-0" style="color: white;">Announcements</h4>
            </div>
            <div class="card-body p-4">
                <!-- Latest Announcement Display -->
                @if (ViewData["Announcements"] != null)

                {

                    var announcements = ViewData["Announcements"] as List<DocumentManagementSystem.Entities.Announcement>;



                    if (announcements.Any())

                    {

                        var latestAnnouncement = announcements.OrderByDescending(a => a.DateCreated).FirstOrDefault();
                        <div class="mb-4">
                            <h5 class="text-dark font-weight-bold mb-2">@latestAnnouncement.Title</h5>
                            <p class="mb-2">@latestAnnouncement.Content</p>
                            <small class="text-secondary">Posted on @latestAnnouncement.DateCreated.ToString("MMMM dd, yyyy")</small>
                        </div>
                    }

                    else

                    {
                        <p class="text-secondary">No announcements found.</p>
                    }

                }
                <!-- Button to View All Announcements -->
                <button class="btn btn-primary mt-3" id="viewAnnouncementsButton">View</button>
            </div>
        </div>
    </div>

    <!-- Announcement Modal -->
    <div class="modal fade" id="announcementsModal" tabindex="-1" aria-labelledby="announcementsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="announcementsModalLabel">All Announcements</h5>
                </div>
                <div class="modal-body">
                    @if (ViewData["Announcements"] != null)
                    {

                        var announcements = ViewData["Announcements"] as List<DocumentManagementSystem.Entities.Announcement>;



                        if (announcements.Any())

                        {
                            @foreach (var announcement in announcements.OrderByDescending(a => a.DateCreated))

                            {
                                <div class="mb-4">
                                    <h5 class="text-dark font-weight-bold mb-2">@announcement.Title</h5>
                                    <p class="mb-2">@announcement.Content</p>
                                    <small class="text-secondary">Posted on @announcement.DateCreated.ToString("MMMM dd, yyyy")</small>
                                </div>
                                @if (announcement != announcements.Last())

                                {
                                    <hr class="my-4" />
                                }
                            }
                        }

                        else

                        {
                            <p class="text-secondary">No announcements found.</p>
                        }
                    }
                </div>
                <!-- Back Button -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="backButton">Back</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- JavaScript for Announcement Modal -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const viewButton = document.getElementById('viewAnnouncementsButton');
        const announcementsModal = new bootstrap.Modal(document.getElementById('announcementsModal'));
        const backButton = document.getElementById('backButton');

        // Show modal when "View" button is clicked
        viewButton.addEventListener('click', function () {
            announcementsModal.show();
        });

        // Hide modal when "Back" button is clicked
        backButton.addEventListener('click', function () {
            announcementsModal.hide();
        });
    });
</script>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">List of /</span> Documents</h4>

    <!-- Add New Document Button -->
    @if (User.IsInRole("Admin") || User.IsInRole("Moderator") || User.IsInRole("Member"))

    {
        <a class="btn btn-primary mb-4" asp-action="Create">
            <i class="bx bx-plus me-1"></i> Add New Document
        </a>
    }

    <!-- Search Bar and Dropdowns -->
    <form class="row g-3 align-items-center mb-4" asp-action="Index" asp-controller="Home" method="get">
        <div class="col-md-5">
            <div class="input-group">
                <input class="form-control" type="search" placeholder="Search..." aria-label="Search" name="search">
                <button class="btn btn-outline-primary" type="submit">
                    <i class="bx bx-search"></i>
                </button>
            </div>
        </div>
        <div class="col-md-3">
            <select class="form-select" name="searchopt">
                <option value="0" selected>Title of Doc</option>
                <option value="1">Sender</option>
                <option value="2">Receiver</option>
                <option value="3">Type of Doc</option>
                <option value="4">Class of Doc</option>
                <option value="5">Department</option>
                <option value="6">State</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select" name="sortOption">
                <option value="" disabled selected>Sort By</option>
                <option value="title">Title</option>
                <option value="type">Document Type</option>
                <option value="status">Status</option>
                <option value="state">State</option>
                <option value="senddate">Send Date</option>
            </select>
        </div>
    </form>

    <!-- Document List Table -->
    <div class="card mt-4">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Type Document</th>
                        <th>Class Document</th>
                        <th>State</th>
                        <th>Sender</th>
                        <th>Receiver</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)

                    {
                        <tr>
                            <td><strong>@item.Title</strong></td>
                            <td>@item.TypeOfDoc</td>
                            <td>@item.ClassOfDoc</td>
                            <td>@item.DocState</td>
                            <td>@item.SenderName</td>
                            <td>@item.ReceiverName</td>
                            <td>@item.DepartmentDefinition</td>
                            <td><span class="badge bg-label-primary me-1">@item.DocStatus</span></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">
                                            <i class="bx bx-file me-1"></i> Details
                                        </a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Moderator") || User.IsInRole("Member"))

                                        {
                                            <a class="dropdown-item" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="bx bx-edit-alt me-1"></i> Edit
                                            </a>
                                            <a class="dropdown-item" asp-controller="Home" asp-action="Remarks" asp-route-id="@item.Id">
                                                <i class="bx bx-edit-alt me-1"></i> Remarks
                                            </a>
                                            @if (User.IsInRole("Admin"))

                                            {
                                                @using (Html.BeginForm(
                                               actionName: "Delete",
                                               controllerName: "Home",
                                               routeValues: new { id = item.Id },
                                               method: FormMethod.Post,
                                               antiforgery: null,
                                               htmlAttributes: new { @class = "dropdown-item", onsubmit = "return confirm('Are you sure you want to delete this file?');" }))

                                                {
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-link" style="padding: 0; border: none; background: none;">
                                                        <i class="bx bx-trash me-1"></i> Delete
                                                    </button>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
