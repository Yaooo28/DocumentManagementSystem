@model UserUpdateModel
@{
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Main content and form on the left -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Model.FirstName @Model.LastName Profile Page</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Detail" asp-controller="Account" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImagePath" />
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Username</label>
                            <input type="text" class="form-control" asp-for="Username" placeholder="User Username" />
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">User Password</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="User Password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">User First Name</label>
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name" />
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">User Last Name</label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name" />
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">User Email</label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="your@email.com" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">User Phone Number</label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="+9053000000" />
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="mb-3">
                            <div class="form-outline flex-fill">
                                <label class="form-label" for="basic-default-fullname">User Department</label>
                                <select class="form-select" asp-items="Model.Departments" asp-for="DeparmentId">
                                    <option value="0">Please select user Department</option>
                                </select>
                                <span class="text-danger" asp-validation-for="DeparmentId"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="profileImage">Profile Image</label>
                            <input type="file" class="form-control" name="profileImage" />
                        </div>
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex justify-content-center align-items-center" style="height: 300px;">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Url.Content("~/" + Model.ImagePath)" alt="Profile Image" class="img-fluid" style="max-width: 250px; max-height: 250px;" />
            }
            else
            {
                <img src="@Url.Content("~/Content/images/default-profile.png")" alt="Default Profile Image" class="img-fluid" style="max-width: 250px; max-height: 250px;" />
            }
        </div>
    </div>
</div>
