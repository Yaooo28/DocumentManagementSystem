@model List<DepartmentListDto>
@{
    Layout = "_Layout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">List of Registered /</span> Departments</h4>
    <div class="card">

        <div class="table-responsive text-nowrap">
            <div id="toastContainer"></div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Department ID</th>
                        <th>Department Name</th>
                        <th>Actions</th> <!-- Combined the action buttons into a single column -->
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var department in Model)

                    {
                        <tr>
                            <td><strong>@department.Id</strong></td>
                            <td>@department.Definition</td>
                            <td>
                                <!-- Edit Button -->
                                <a class="btn btn-info" asp-action="Update" asp-route-id="@department.Id">Edit</a>

                                <!-- Delete Button with Confirmation -->
                                <form asp-action="Delete" asp-route-id="@department.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this department?');">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                    <!-- Handle case when no departments are available -->
                    @if (!Model.Any())

                    {
                        <tr>
                            <td colspan="3" class="text-center">No departments available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
    <a class="btn btn-primary mt-3" asp-action="Create" asp-controller="Department">Create New Department</a>
    <!--/ Hoverable Table rows -->
</div>
<hr class="my-5" />
